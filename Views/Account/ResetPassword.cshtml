@model AccountResetPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Смяна на парола</title>
    <!-- Include your CSS file -->
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <!-- Reset Password Section -->
    <section id="reset-password" class="contact section dark-background">
        <!-- Section Title -->
        <div class="container section-title mt-5 pt-5" data-aos="fade-up">
            <h2>Смяна на парола</h2>
            <p>Попълнете данните за смяна на паролата.</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div><!-- End Section Title -->

        <div class="container" data-aos="fade" data-aos-delay="100">
            <div class="row gy-4">
                <div class="col-lg-4">
                    <!-- Info Items -->
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                        <i class="bi bi-lock flex-shrink-0"></i>
                        <div>
                            <h3>Текуща парола</h3>
                            <p>Въведете текущата си парола за потвърждение.</p>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-lock-fill flex-shrink-0"></i>
                        <div>
                            <h3>Нова парола</h3>
                            <p>Изберете сигурна нова парола.</p>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-check2-circle flex-shrink-0"></i>
                        <div>
                            <h3>Потвърдете паролата</h3>
                            <p>Повторете новата парола за потвърждение.</p>
                        </div>
                    </div><!-- End Info Item -->
                </div>

                <div class="col-lg-8">
                    <!-- Reset Password Form -->
                    <form asp-action="ResetPassword" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                        <div class="row gy-4">
                            <!-- Old Password -->
                            <div class="col-md-12">
                                <input asp-for="OldPassword" class="form-control" id="OldPassword" type="password" placeholder="Текуща парола" required />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>

                            <!-- New Password -->
                            <div class="col-md-12">
                                <input asp-for="NewPassword" class="form-control" id="NewPassword" type="password" placeholder="Нова парола" required />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <!-- Confirm New Password -->
                            <div class="col-md-12">
                                <input asp-for="NewPasswordRepeat" class="form-control" id="NewPasswordRepeat" type="password" placeholder="Повтори новата парола" required />
                                <span asp-validation-for="NewPasswordRepeat" class="text-danger"></span>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-md-12 text-center">
                                <button type="submit">
                                    Смяна
                                </button>
                            </div>
                        </div>
                    </form>
                </div><!-- End Reset Password Form -->
            </div>
        </div>
    </section><!-- /Reset Password Section -->
</body>
</html>