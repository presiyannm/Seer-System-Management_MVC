@model ChangeEnquiryByIdViewModel

<!-- Change Enquiry Section -->
<section id="change-enquiry" class="contact section dark-background">
    <!-- Section Title -->
    <div class="container section-title mt-5 pt-5" data-aos="fade-up">
        <h2>Промени въпроса си</h2>
        <p>Тук можете да промените детайлите на вашия въпрос за гадателство.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade" data-aos-delay="100">
        <div class="row gy-4">
            <!-- Info Items on the Left Column -->
            <div class="col-lg-4">
                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                    <i class="bi bi-person flex-shrink-0"></i>
                    <div>
                        <h3>Пълно име</h3>
                        <p>Въведете вашето пълно име.</p>
                    </div>
                </div><!-- End Info Item -->

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                    <i class="bi bi-calendar-date flex-shrink-0"></i>
                    <div>
                        <h3>Рожденна дата</h3>
                        <p>Въведете вашата рождена дата за по-точно гадателство.</p>
                    </div>
                </div><!-- End Info Item -->

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                    <i class="bi bi-pencil flex-shrink-0"></i>
                    <div>
                        <h3>Въпрос</h3>
                        <p>Добавете или редактирайте вашия въпрос.</p>
                    </div>
                </div><!-- End Info Item -->

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="500">
                    <i class="bi bi-binoculars flex-shrink-0"></i>
                    <div>
                        <h3>Избор на вид гадаене</h3>
                        <p>Изберете предпочитания вид гадаене от списъка.</p>
                    </div>
                </div><!-- End Info Item -->
            </div>

            <!-- Change Enquiry Form on the Right Column -->
            <div class="col-lg-8">
                <form id="change-enquiry-form" asp-action="ChangeEnquiryById" method="post" novalidate class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                    <!-- Client Name -->
                    <div class="form-group">
                        <label asp-for="ClientName" class="control-label">Пълно име</label>
                        <input asp-for="ClientName" class="form-control" id="ClientName" placeholder="Вашето пълно име" />
                        <span class="text-danger" id="ClientNameError"></span>
                    </div>

                    <!-- Client Birth Date -->
                    <div class="form-group">
                        <label asp-for="ClientBirthDate" class="control-label">Рожденна дата</label>
                        <input asp-for="ClientBirthDate" class="form-control" id="ClientBirthDate" type="date" placeholder="Рожденна дата" />
                        <span class="text-danger" id="ClientBirthDateError"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Въпрос</label>
                        <textarea asp-for="Description" class="form-control" id="Description" placeholder="Опишете вашия въпрос..."></textarea>
                        <span class="text-danger" id="DescriptionError"></span>
                    </div>

                    <!-- Enquiry Type -->
                    <div class="form-group mb-3">
                        <label asp-for="EnquiryTypeId" class="control-label">Избери си вид гадаене</label>
                        <select asp-for="EnquiryTypeId" class="form-control" id="EnquiryTypeId" asp-items="@(new SelectList(Model.EnquiryTypes, "Id", "Name"))">
                            <option value="" disabled selected>-- Избери вид --</option>
                        </select>
                        <span class="text-danger" id="EnquiryTypeIdError"></span>
                    </div>

                    <!-- Hidden Fields -->
                    <input type="hidden" asp-for="ClientId" value="@User.Id()" />
                    <input type="hidden" asp-for="EnquiryId" value="@Model.EnquiryId" />
                    <input type="hidden" asp-for="SeerId" value="@Model.SeerId" />

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit">Запази промяната</button>
                    </div>
                </form>

                <!-- Back Link -->
                <div class="mt-3 text-center">
                    <a asp-action="ShowMyEnquries" asp-controller="Client" asp-route-userId="@User.Id()">Върни се обратно</a>
                </div>
            </div><!-- End Change Enquiry Form -->
        </div>
    </div>
</section><!-- /Change Enquiry Section -->
<!-- Link to the external JavaScript file -->
<script src="~/js/Client/ChangeEnquiryByIdValidation.js"></script>